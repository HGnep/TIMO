@{
	Layout = "_Layout";
}
@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"


<h4>New contact</h4>

<form data-toggle="validator" role="form">

	<div class="row">
		<div class="col-xs-offset-1 col-xs-3">
			<div class="form-group">
				<label for="Voornaam" class="control-label small-text">Voornaam:</label>
				<input type="text" class="form-control" id="voornaam" placeholder="Voornaam">
			</div>
		</div>

		<div class="col-xs-2">
			<div class="form-group">
				<label for="Tussenvoegsel" class="control-label small-text">Tussenvoegsel:</label>
				<input type="Tussenvoegsel" class="form-control" id="Tussenvoegsel" placeholder="van der">
			</div>
		</div>

		<div class="col-xs-5">
			<div class="form-group">
				<label for="Achternaam" class="control-label small-text">Achternaam:</label>
				<input type="Achternaam" class="form-control" id="Achternaam" placeholder="Achternaam" required>
			</div>
		</div>

		<div class="col-xs-1"></div>
	</div>


	<div class="row"> 
		<div class="col-xs-offset-1 col-xs-6">
			<div class="form-group">
				<label for="Straat" class="control-label small-text">Straat:</label>
				<input type="Straat" class="form-control" id="Straat" placeholder="Straatnaam" required>
			</div>
		</div>

		<div class="col-xs-2">
			<div class="form-group">
				<label for="Huisnummer" class="control-label small-text">Huisnr.:</label>
				<input type="Huisnummer" class="form-control" id="Huisnummer" placeholder="42" required>
			</div>
		</div>

		<div class="col-xs-2">
			<div class="form-group">
				<label for="Toevoeging" class="control-label small-text">Toevoeging.:</label>
				<input type="Toevoeging" class="form-control" id="Toevoeging" placeholder="B.">
			</div>
		</div>

		<div class="col-xs-1"></div>
	</div>


	<div class="row"> 
		<div class="col-xs-offset-1 col-xs-3">
			<div class="form-group">
				<label for="Postcode" class="small-text">Postcode:</label>
				<input type="Postcode" class="form-control" id="Postcode" placeholder="1033 SL" required>
			</div>
		</div>

		<div class="col-xs-7">
			<div class="form-group">
				<label for="Woonplaats" class="small-text">Woonplaats:</label>
				<input type="Woonplaats" class="form-control" id="Woonplaats" placeholder="Woonplaats" required>
			</div>
		</div>

		<div class="col-xs-1"></div>
	</div>


	<div class="row">
		<div class="col-xs-offset-1 col-xs-3">
			<div class="form-group">
				<label for="Telefoonnummer" class="small-text">Telefoonnummer:</label>
				<input type="Telefoonnummer" class="form-control" id="Telefoonnummer" placeholder="06********">
			</div>
		</div>

		<div class="col-xs-3">
			<div class="form-group">
				<label for="Email" class="small-text">E-mailadres:</label>
				<input type="Email" class="form-control" id="Email" placeholder="<naam>[at]gmail.com">
			</div>
		</div>

		<div class="col-xs-2">
			<div class="form-group">
				<label for="Geboortedatum" class="small-text">Geboortedatum:</label>
				<input type="Geboortedatum" class="form-control" id="Geboortedatum" placeholder="dd-mm-yyyy">
			</div>
		</div>

		<div class="col-xs-2">
			<div class="form group">
				<label for"Geslacht" class="small-text">Geslacht:</label>
				<select class="form-control" id="sel1">
					<option>Man</option>
					<option>Vrouw</option>
					<option>Overig</option>
				</select>
			</div>
		</div>

		<div class="col-xs-1"></div>
	</div>


	<div class="row"> 
		<div class="col-xs-offset-1 col-xs-10">
			<div class="form-group">
				<label for="Opmerkingen" class="small-text">Opmerkingen:</label>
				<textarea class="form-control" rows="3" placeholder="Overige gegevens"></textarea>
			</div>
		</div>

		<div class="col-xs-1"></div>
	</div>



		<button type="submit" class="btn btn-default">Submit</button>
	</form>
</div>







